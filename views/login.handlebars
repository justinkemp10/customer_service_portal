<div class="flex flex-col sm:flex-row pt-1 sm:pt-20 justify-evenly">
  <div class="col-md-6">
    <h1 class= "text-4xl font-black text-center mb-8">Login</h1>

    <form class="w-full max-w-sm login-form">
    <div class="md:flex md:items-center mb-6">
      <div class="md:w-1/3 form-group">
        <label class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" for="email-login">
          Email
        </label>
      </div>
      <div class="md:w-2/3">
        <input type="email" class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" id="email-login" type="text" placeholder="test@email.com">
      </div>
    </div>
    <div class="md:flex md:items-center mb-6">
      <div class="md:w-1/3 form-group">
        <label class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" for="password-login">
          Password
        </label>
      </div>
      <div class="md:w-2/3">
        <input class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" id="password-login" type="password">
      </div>
    </div>
    <div class="md:flex md:items-center">
      <div class="md:w-1/3"></div>
      <div class=" md:w-2/3 form-group flex justify-center sm:justify-start pb-5 ">
        <button class="shadow bg-purple-500 hover:bg-purple-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded justify-center" type="submit">
          Login
        </button>
      </div>
    </div>
    </form>

  </div>

  <div class="justify-center col-md-6">
    <h1 class= "text-4xl font-black text-center mb-8">Sign Up!</h1>
    <form class="w-full max-w-sm signup-form">
      <div class="md:flex md:items-center mb-6">
        <div class="md:w-1/3 form-group">
          <label class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" for="name-signup">
            Full Name
          </label>
        </div>
        <div class="md:w-2/3">
          <input class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" id="name-signup" type="text" placeholder="Jane Doe">
        </div>
      </div>
      <div class="md:flex md:items-center mb-6">
        <div class="md:w-1/3 form-group">
          <label class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" for="email-signup">
            Email
          </label>
        </div>
        <div class="md:w-2/3">
          <input type="email" class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" id="email-signup" type="text" placeholder="test@email.com">
        </div>
      </div>
      <div class="md:flex md:items-center mb-6">
        <div class="md:w-1/3 form-group">
          <label class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4" for="password-signup">
            Password
          </label>
        </div>
        <div class="md:w-2/3">
          <input class="bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500" id="password-signup" type="password" placeholder="******************">
        </div>
      </div>
      <div class="md:flex md:items-center">
        <div class="md:w-1/3"></div>
        <div class=" md:w-2/3 form-group flex justify-center sm:justify-start pb-5">
          <button class="shadow bg-purple-500 hover:bg-purple-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded" type="submit">
            Sign Up
          </button>
        </div>
      </div>
    </form>
  </div>

</div>

